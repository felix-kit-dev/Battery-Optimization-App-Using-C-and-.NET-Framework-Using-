<Window x:Class="BatteryOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battery Optimizer" Height="350" Width="525">
    <Grid>
        <TextBlock Text="Battery Optimizer" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <ProgressBar x:Name="BatteryProgressBar" Height="25" VerticalAlignment="Top" Margin="50,60,50,0"/>
        <TextBlock x:Name="BatteryStatusText" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0"/>
        <CheckBox x:Name="CutPowerCheckBox" Content="Cut Power When Fully Charged" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0"/>
    </Grid>
</Window>
